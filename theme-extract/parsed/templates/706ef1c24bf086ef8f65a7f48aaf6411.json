{"components/common/quick-search":"<form class=\"form\" onsubmit=\"return false\" data-url=\"{{urls.search}}\" data-quick-search-form>\r\n    <fieldset class=\"form-fieldset\">\r\n        <div class=\"form-field pos-relative\">\r\n            <label class=\"is-srOnly\" for=\"{{name}}\">{{lang \"search.quick_search.input_label\"}}</label>\r\n            <input data-hj-allow class=\"form-input\" \r\n                   data-search-quick \r\n                   data-search=\"quickSearch\" \r\n                   name=\"{{name}}\" \r\n                   id=\"{{name}}\" \r\n                   data-error-message=\"{{lang 'search.error.empty_field'}}\" \r\n                   placeholder=\"{{lang 'search.quick_search.input_placeholder'}}\" \r\n                   autocomplete=\"off\">\r\n            <button type=\"submit\" class=\"button button--primary button--iconCustom pos-absolute\" aria-label=\"{{lang \"search.quick_search.input_label\"}}\"><svg class=\"icon\"><use xlink:href=\"#icon-search-2\"></use></svg></button>\r\n        </div>\r\n    </fieldset>\r\n</form>\r\n"}
