{"components/halothemes/product/halo-ask-an-expert":"{{#all (if theme_settings.halo_ask_an_expert) (if theme_settings.halo_ask_an_expert_pagelink)}}\r\n    <div class=\"halo-askAnExpert d-inline-block v-a-top\">\r\n        <a class=\"productView-item-link productView-askAnExpert-link ask-an-expert-link color-black b-r-100\" href=\"#\" aria-label=\"{{lang 'products.ask_an_expert'}}\" data-reveal-id=\"halo-ask-an-expert-popup\">\r\n            <svg class=\"icon d-inline-block v-a-middle\" role=\"img\" aria-hidden=\"true\" aria-label=\"{{lang 'products.ask_an_expert'}}\">\r\n                <title>{{lang 'products.ask_an_expert'}}</title>\r\n                <desc>{{lang 'products.ask_an_expert'}}</desc>\r\n                <use xlink:href=\"#icon-ask-an-expert\"></use>\r\n            </svg>\r\n            <span class=\"text d-inline-block v-a-middle\">\r\n                <span>{{lang 'products.ask_an_expert'}}</span>\r\n            </span>\r\n        </a>\r\n        <div id=\"halo-ask-an-expert-popup\" class=\"modal modal--medium halo-ask-an-expert-popup halo-ask-an-expert\" data-reveal>\r\n            <div class=\"modal-content\">\r\n                <div class=\"modal-header\">\r\n                    <p class=\"modal-header-title\">{{lang 'products.ask_an_expert'}}</p>\r\n                    <button class=\"modal-close\" type=\"button\" title=\"Close\">\r\n                        <span class=\"aria-description--hidden\">Close</span>\r\n                        <span aria-hidden=\"true\">Ã—</span>\r\n                    </button>\r\n                </div>\r\n                <div class=\"modal-body\">\r\n                    {{#if theme_settings.halo_ask_an_expert_desc1}}\r\n                        <h4 class=\"halo-ask-an-expert-heading\">\r\n                            <span>{{theme_settings.halo_ask_an_expert_desc1}}</span>\r\n                        </h4>\r\n                    {{/if}}\r\n                    {{#if theme_settings.halo_ask_an_expert_desc2}}\r\n                        <div class=\"halo-ask-an-expert-text\">{{theme_settings.halo_ask_an_expert_desc2}}</div>\r\n                    {{/if}}\r\n                    <span class=\"halo-line\">halo line</span>\r\n                    {{#if theme_settings.halo_ask_an_expert_desc3}}\r\n                        <div class=\"halo-ask-an-expert-intro\">{{theme_settings.halo_ask_an_expert_desc3}}</div>\r\n                    {{/if}}\r\n                    <div id=\"halo-ask-an-expert-results\" class=\"halo-ask-an-expert-text\"></div>\r\n                    <form data-contact-form class=\"halo-ask-an-expert-form\" action=\"{{urls.contact_us_submit}}\" method=\"post\" data-product-ask-id=\"{{product.id}}\" data-product-ask-title=\"{{product.title}}\" data-product-ask-url=\"{{product.url}}\" data-product-ask-sku=\"{{product.sku}}\">\r\n                        <fieldset class=\"form-fieldset\">\r\n                            <div class=\"hl-form-field-wrapper\"></div>\r\n                            <div class=\"form-field form-field-radio\">\r\n                                <label class=\"form-label\">Do you need:</label>\r\n                                <input class=\"form-radio\" id=\"pricing-radio\" type=\"radio\" name=\"type_package\" checked value=\"Pricing\">\r\n                                <label class=\"form-label\" for=\"pricing-radio\">Pricing</label>\r\n                                <input class=\"form-radio\" id=\"answers-radio\" type=\"radio\" name=\"type_package\" value=\"Answers\">\r\n                                <label class=\"form-label\" for=\"answers-radio\">Answers</label>\r\n                                <input class=\"form-radio\" id=\"both-radio\" type=\"radio\" name=\"type_package\" value=\"Pricing & Answers\">\r\n                                <label class=\"form-label\" for=\"both-radio\">Both</label>\r\n                            </div>\r\n                            <div class=\"form-field\">\r\n                                <label class=\"form-label\" for=\"contact_comment_area\">What can i help you with today?\r\n                                    <small>*</small>\r\n                                </label>\r\n                                <textarea name=\"contact_comment_area\" cols=\"30\" rows=\"3\" class=\"form-input\" id=\"contact_comment_area\" required></textarea>\r\n                            </div>\r\n                            <div class=\"form-field form-field-radio form-field-radio2\">\r\n                                <label class=\"form-label form-label-custom\">How would you like me to contact you?</label>\r\n                                <input class=\"form-radio\" id=\"phone-radio\" type=\"radio\" name=\"type_contact\" checked value=\"Phone\">\r\n                                <label class=\"form-label\" for=\"phone-radio\">Phone</label>\r\n                                <input class=\"form-radio\" id=\"email-radio\" type=\"radio\" name=\"type_contact\" value=\"Email\">\r\n                                <label class=\"form-label\" for=\"email-radio\">Email</label>\r\n                                <input class=\"form-radio\" id=\"both-radio-2\" type=\"radio\" name=\"type_contact\" value=\"Phone & Email\">\r\n                                <label class=\"form-label\" for=\"both-radio-2\">Both</label>\r\n                            </div>\r\n                            <div class=\"hl-form-field\" style=\"display: none;\">\r\n                                <textarea name=\"contact_question\" cols=\"30\" rows=\"3\" class=\"form-input\" id=\"contact_question\"></textarea>\r\n                            </div>\r\n                            <div class=\"g-recaptcha\" data-sitekey=\"6LcjX0sbAAAAACp92-MNpx66FT4pbIWh-FTDmkkz\"></div>\r\n                            <div class=\"form-actions\">\r\n                                <button type=\"submit\" class=\"button button--tertiary\" id=\"halo-ask-an-expert-button\">Send Question</button>\r\n                            </div>\r\n                        </fieldset>\r\n                    </form>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n{{/all}}\r\n"}
